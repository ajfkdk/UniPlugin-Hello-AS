<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rect_circle"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="文字编辑"
            android:textColor="@color/color_app"
            android:textSize="18sp" />

        <View
            android:layout_width="200dp"
            android:layout_height="0.5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/app_txt_color" />

        <EditText
            android:id="@+id/doodle_selectable_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/grey"
            android:textSize="26dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_txt_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doodle_text_cancel_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_fouces_style"
                android:gravity="center"
                android:text="@string/doodle_cancel"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/doodle_text_enter_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/btn_fouces_style"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>
</FrameLayout>